@model List<Pelicula>

<h1>Buscador Peliculas</h1>

<p>
    <a asp-controller="Peliculas"
       asp-action="Index"
       class="btn btn-info">
        Volver a Index
    </a>
</p>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Introduzca actor</label>
        <input type="text" name="actor" class="form-control" />
        <button class="btn btn-primary">Buscar</button>
    </div>
</form>

<table class="table-borderless table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Imagen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (Pelicula peli in Model)
            {
                <tr>
                    <td>@peli.Titulo</td>
                    <td>
                        <img src="~/images/@peli.Foto" width="100" height="200" />
                    </td>
                    <td>
                        <a asp-controller="Peliculas"
                           asp-action="Details"
                           asp-route-id="@peli.IdPelicula"
                           class="btn btn-sm btn-primary">
                            Details
                        </a>
                        <a asp-controller="Peliculas"
                           asp-action="Edit"
                           asp-route-id="@peli.IdPelicula"
                           class="btn btn-sm btn-warning">
                            Edit
                        </a>
                        <a asp-controller="Peliculas"
                           asp-action="Delete"
                           asp-route-id="@peli.IdPelicula"
                           class="btn btn-sm btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
